ALTER TABLE public.students
ADD COLUMN faculty_id INTEGER NOT NULL DEFAULT 1,
ADD CONSTRAINT students_faculty_fk FOREIGN KEY (faculty_id)
REFERENCES public.faculties (id) ON DELETE SET DEFAULT;