<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="558.0" prefWidth="1216.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.StudentController">
    <children>
        <VBox layoutX="38.0" layoutY="66.0" prefHeight="277.0" prefWidth="242.0" spacing="10.0">
            <Label text="ID:">
            <font>
               <Font size="15.0" />
            </font></Label>
            <TextField fx:id="idField" />
            <Label text="Name:">
            <font>
               <Font size="15.0" />
            </font></Label>
            <TextField fx:id="nameField" />
         <Label text="Faculty:">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
         <ChoiceBox fx:id="choiceBoxField" prefHeight="26.0" prefWidth="243.0" />
         <Label text="Gender:">
            <font>
               <Font size="15.0" />
            </font>
         </Label>

            <HBox spacing="10.0">
        <RadioButton fx:id="maleField" mnemonicParsing="false" text="Male" toggleGroup="$genderGroup"/>
         <RadioButton fx:id="femaleField" mnemonicParsing="false" text="Female" toggleGroup="$genderGroup"/>
            </HBox>
            <Label text="Email:">
            <font>
               <Font size="15.0" />
            </font></Label>
            <TextField fx:id="emailField" />
            <Label text="Address:">
            <font>
               <Font size="15.0" />
            </font></Label>
            <TextField fx:id="addressField" />
            <Label text="Phone Number:">
            <font>
               <Font size="15.0" />
            </font></Label>
            <TextField fx:id="phoneField" promptText="09-xxxxxxxxx" />
            <HBox spacing="10.0">
                <Button onAction="#addStudent" text="Add" />
                <Button onAction="#updateStudent" text="Update" />
                <Button onAction="#deleteStudent" text="Delete" />
                <Button mnemonicParsing="false" onAction="#clearForm" text="Clear" />
            </HBox>
        </VBox>
        <TableView fx:id="studentTable" layoutX="306.0" layoutY="101.0" onMouseClicked="#handleMouseAction" prefHeight="377.0" prefWidth="829.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="115.0" text="Name" />
                <TableColumn fx:id="emailColumn" prefWidth="115.0" text="Email" />
                <TableColumn fx:id="addressColumn" prefWidth="196.0" text="Address" />
                <TableColumn fx:id="phoneColumn" prefWidth="137.0" text="Phone Number" />
                <TableColumn fx:id="facultyColumn" prefWidth="154.0" text="Faculty" />
            </columns>
        </TableView>
      <Label layoutX="487.0" layoutY="27.0" text="Student Management ">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Label layoutX="907.0" layoutY="72.0" prefWidth="57.0" text="Search:">
         <font>
            <Font size="15.0" />
         </font></Label>
      <TextField fx:id="searchField" layoutX="975.0" layoutY="67.0" onKeyTyped="#handleSearchAction" />
    </children>
</AnchorPane>
