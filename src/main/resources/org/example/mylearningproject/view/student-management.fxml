<AnchorPane prefHeight="440.0" prefWidth="880.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.StudentController">
    <children>
        <VBox layoutX="38.0" layoutY="66.0" prefHeight="277.0" prefWidth="242.0" spacing="10.0">
            <Label text="ID:" />
            <TextField fx:id="idField" />
            <Label text="Name:" />
            <TextField fx:id="nameField" />
            <Label text="Email:" />
            <TextField fx:id="emailField" />
            <Label text="Address:" />
            <TextField fx:id="addressField" />
            <Label text="Phone Number:" />
            <TextField fx:id="phoneField" promptText="09-xxxxxxxxx" />
            <HBox spacing="10.0">
                <Button onAction="#addStudent" text="Add" />
                <Button onAction="#updateStudent" text="Update" />
                <Button onAction="#deleteStudent" text="Delete" />
                <Button mnemonicParsing="false" onAction="#clearForm" text="Clear" />
            </HBox>
        </VBox>
        <TableView fx:id="studentTable" layoutX="306.0" layoutY="96.0" onMouseClicked="#handleMouseAction" prefHeight="308.0" prefWidth="565.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="115.0" text="Name" />
                <TableColumn fx:id="emailColumn" prefWidth="115.0" text="Email" />
                <TableColumn fx:id="addressColumn" prefWidth="115.0" text="Address" />
                <TableColumn fx:id="phoneColumn" prefWidth="119.19997558593752" text="Phone Number" />
            </columns>
        </TableView>
      <Label layoutX="243.0" layoutY="28.0" text="Student Management ">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Label layoutX="641.0" layoutY="70.0" text="Search:" />
      <TextField fx:id="searchField" layoutX="697.0" layoutY="66.0" onKeyTyped="#handleSearchAction" />
    </children>
</AnchorPane>
